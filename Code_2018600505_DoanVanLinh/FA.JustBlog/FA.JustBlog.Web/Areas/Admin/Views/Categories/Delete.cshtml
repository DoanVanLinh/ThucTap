@using FA.JustBlog.ViewModels.Categories
@model  DeleteCategoryViewModel
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h2>Xóa Category</h2>

<h3>Bạn có chắc muốn xóa Category ID = <span>@Model.Id</span></h3>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <button type="submit" class="btn btn-success">Xóa</button>
        <button type="button" class="btn btn-danger">@Html.ActionLink("Quay lại", "Index")</button>
    </div>
    }
</div>
