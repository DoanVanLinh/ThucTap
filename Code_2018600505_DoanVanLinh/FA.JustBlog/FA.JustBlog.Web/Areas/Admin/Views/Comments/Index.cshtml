@using FA.JustBlog.ViewModels.Comments
@model IEnumerable<CommentViewModel> 


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p>
    <button type="button" class="btn btn-success">@Html.ActionLink("Thêm", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Post.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentHeader)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Post.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentHeader)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentTime)
            </td>
            <td>
                <button type="button" class="btn btn-warning">@Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id })</button>
                <button type="button" class="btn btn-info">@Html.ActionLink("Chi tiết", "Details", new { id = item.Id })</button>
                <button type="button" class="btn btn-danger">@Html.ActionLink("Xóa", "Delete", new { id = item.Id })</button>
            </td>
        </tr>
    }

</table>
