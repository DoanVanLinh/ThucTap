@using FA.JustBlog.ViewModels.Categories
@model  IEnumerable<CategoryViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Category</h2>

<p>
    <button type="button" class="btn btn-success">@Html.ActionLink("Thêm", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlSlug)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlSlug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <button type="button" class="btn btn-warning">@Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id })</button>
                <button type="button" class="btn btn-info">@Html.ActionLink("Chi tiết", "Details", new { id = item.Id })</button>
                <button type="button" class="btn btn-danger">@Html.ActionLink("Xóa", "Delete", new { id = item.Id })</button>
            </td>
        </tr>
    }

</table>


