<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin page</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Assets/sidebars.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid ">
        <div class="row h-10" style="background-color:dodgerblue">
            <h1 style="color:white;text-align:center">ADMIN</h1>
        </div>
        <div class="row h-100">
            <div class="flex-shrink-0 h-100 p-3 bg-white col-2" style="background-color:deepskyblue !important">
                <button type="button" class="btn w-100" style="margin-bottom: 10px;background-color: #00ACE6">@Html.ActionLink("Post", "Index", "Posts")</button>
                <button type="button" class="btn w-100" style="margin-bottom: 10px;background-color: #00ACE6">@Html.ActionLink("Category", "Index", "Categories")</button>
                <button type="button" class="btn w-100" style="margin-bottom: 10px;background-color: #00ACE6">@Html.ActionLink("Tag", "Index", "Tags")</button>
            </div>
            <div class="col-10" style="background-color:whitesmoke; padding:30px">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Assets/sidebars.js"></script>
    <script src="~/Areas/Admin/Assets/UrlHelper.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
